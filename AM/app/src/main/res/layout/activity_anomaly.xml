<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    tools:context=".views.AnomalyActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:animateLayoutChanges="false"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDispositivoLabel"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:text="Dispositivo"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                    <EditText
                        android:id="@+id/edtIdDispositivo"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:inputType="textShortMessage" />

                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtDescricao"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Descrição"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                <EditText
                    android:id="@+id/mvDescricao"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:inputType="textMultiLine"
                    android:lines="8"
                    android:maxLines="10"
                    android:minLines="6"
                    android:scrollbars="vertical" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTipoLabelEdit"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Tipo"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cbHardware"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:onClick="onClickHardware"
                        android:text="Hardware" />

                    <Space
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0" />

                    <CheckBox
                        android:id="@+id/cbSoftware"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:onClick="onClickSoftware"
                        android:text="Software" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="0" />

                <TextView
                    android:id="@+id/tvGravidadeEditLabel"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Gravidade"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cbFuncional"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:onClick="onClickFuncional"
                        android:text="Funcional" />

                    <Space
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0" />

                    <CheckBox
                        android:id="@+id/cbNFuncional"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:onClick="onClickNFuncional"
                        android:text="Não Funcional" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="0" />

                <TextView
                    android:id="@+id/tvEstadoEdit"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Estado"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinnerEstado"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_avaria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/fab_avaria"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_adicionar_foreground" />

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</ScrollView>
